<form action="/tasks/id" method="post">
  <%= hidden_filed_tag :authenticity_token, form_authenticity_token %>
  <label for="title">Title</label>
  <input type="text" name="task[title]">
  <label for="details">Details</label>
  <input type="text" name="task[details]">
  <label for="completed">False</label>
  <input type="boolean" name="task[completed]">
  <input type="submit">
</form>
